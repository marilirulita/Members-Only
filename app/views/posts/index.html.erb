<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">Posts</h1>

        <% @posts.each do |post| %>
          <div class="box">
          <article class="media"> 
            <div class="media-content"> 
              <div class="content"> 
                <%= post.article %>
                <%= link_to 'Show', post %>
                <%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </article> 
          </div>
        <% end %>
        
        </div>
      </div>
    </div>
  </div>
