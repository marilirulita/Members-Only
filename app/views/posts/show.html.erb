<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">Article:</h1>
        <p>
        <%= @post.article %>
        </p>
      </div>
    </div>
  </div>
</div>

<nav class="navbar is-fixed-bottom">
  <div class="navbar-menu">
    <div class="navbar-item">
      <div class="field is-grouped">
        <p class="control">
        <%= link_to 'Edit', edit_post_path(@post), class: "button is-dark" %> |
        <%= link_to 'Cancel', posts_path, class: "button is-dark" %>
        </p>
      </div>
    </div>
  </div>
</nav>


